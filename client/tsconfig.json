{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "module": "ES2015",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@lib/*": ["../lib/*"],
    }
  },
  "include": ["src/**/*.ts"]
}
