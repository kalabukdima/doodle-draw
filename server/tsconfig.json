{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "isolatedModules": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@lib/*": ["../lib/*"],
    }
  },
  "include": ["src/**/*.ts"]
}
