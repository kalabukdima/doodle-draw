{
  "name": "doodle-draw",
  "version": "0.0.1",
  "description": "Sample socket.io game",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.1"
  },
  "scripts": {
    "clean": "rm -rfv ./dist/ ./static/dist/",
    "build-server": "tsc --build",
    "build-client": "parcel build --dist-dir static/dist client/index.html",
    "start-server": "node dist/index.js",
    "start-client": "python -m http.server -d static/dist",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\" \"parcel serve --dist-dir static/dist client/index.html\""
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/socket.io": "^3.0.2",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.15",
    "parcel": "^2.9.3",
    "socket.io-client": "^4.7.1",
    "typescript": "^5.1.6"
  }
}
